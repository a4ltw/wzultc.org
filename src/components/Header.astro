---
// 導航項目
const navItems = [
  { href: '/', label: '首頁' },
  {
    label: '關於',
    children: [
      { href: '/about', label: '計畫說明' },
      { href: '/team', label: '主持團隊' },
      { href: '/partners', label: '合作場域' },
    ]
  },
  {
    label: '教學',
    children: [
      { href: '/course', label: '華語教材' },
      { href: '/videos', label: '教學影片' },
    ]
  },
  {
    label: '成果',
    children: [
      { href: '/research', label: '研究成果' },
      { href: '/gallery', label: '活動剪影' },
      { href: '/media', label: '媒體報導' },
    ]
  },
  { href: '/enroll', label: '招募' },
  { href: '/contact', label: '聯絡我們' },
];

const currentPath = Astro.url.pathname;
---

<header id="main-header" class="bg-white shadow-md sticky top-0 z-50 transition-all duration-300">
  <nav class="container mx-auto px-4 py-4 transition-all duration-300" id="main-nav">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3" aria-label="WZULTC 跨語照護 - 回首頁">
        <img src="/assets/logo.png" alt="" class="h-12 md:h-14 w-auto transition-all duration-300" id="header-logo" />
        <div class="text-xl md:text-2xl font-bold bg-gradient-to-r from-blue-500 via-cyan-500 to-teal-500 bg-clip-text text-transparent hidden sm:block transition-all duration-300" id="header-text">
          跨語照護
        </div>
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex space-x-8 items-center">
        {navItems.map((item) => (
          <li class="relative group">
            {item.children ? (
              <>
                <button class="text-gray-700 hover:text-teal-600 font-medium transition-colors flex items-center">
                  {item.label}
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <ul class="absolute left-0 mt-2 w-48 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                  {item.children.map((child) => (
                    <li>
                      <a
                        href={child.href}
                        class="block px-4 py-2 text-gray-700 hover:bg-cyan-50 hover:text-teal-600 transition-colors first:rounded-t-lg last:rounded-b-lg"
                      >
                        {child.label}
                      </a>
                    </li>
                  ))}
                </ul>
              </>
            ) : (
              <a
                href={item.href}
                class={`text-gray-700 hover:text-teal-600 font-medium transition-colors ${
                  currentPath === item.href ? 'text-teal-600' : ''
                }`}
              >
                {item.label}
              </a>
            )}
          </li>
        ))}
      </ul>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden text-gray-700 hover:text-teal-600 focus:outline-none"
        aria-label="開啟選單"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
      <ul class="space-y-2">
        {navItems.map((item) => (
          <li>
            {item.children ? (
              <div>
                <div class="text-gray-900 font-semibold py-2">{item.label}</div>
                <ul class="pl-4 space-y-1">
                  {item.children.map((child) => (
                    <li>
                      <a
                        href={child.href}
                        class="block py-2 text-gray-600 hover:text-teal-600 transition-colors"
                      >
                        {child.label}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ) : (
              <a
                href={item.href}
                class={`block py-2 text-gray-700 hover:text-teal-600 transition-colors ${
                  currentPath === item.href ? 'text-teal-600 font-semibold' : ''
                }`}
              >
                {item.label}
              </a>
            )}
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Shrink header on scroll
  const header = document.getElementById('main-header');
  const nav = document.getElementById('main-nav');
  const logo = document.getElementById('header-logo');
  const headerText = document.getElementById('header-text');

  let lastScrollY = 0;
  const scrollThreshold = 50;

  function updateHeader() {
    const scrollY = window.scrollY;

    if (scrollY > scrollThreshold) {
      // Scrolled down - shrink header
      nav?.classList.remove('py-4');
      nav?.classList.add('py-2');
      logo?.classList.remove('h-12', 'md:h-14');
      logo?.classList.add('h-8', 'md:h-10');
      headerText?.classList.add('hidden');
      headerText?.classList.remove('sm:block');
    } else {
      // At top - full header
      nav?.classList.add('py-4');
      nav?.classList.remove('py-2');
      logo?.classList.add('h-12', 'md:h-14');
      logo?.classList.remove('h-8', 'md:h-10');
      headerText?.classList.remove('hidden');
      headerText?.classList.add('sm:block');
    }

    lastScrollY = scrollY;
  }

  window.addEventListener('scroll', updateHeader, { passive: true });
  updateHeader(); // Initial check
</script>
