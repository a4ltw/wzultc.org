---
import Layout from '../layouts/Layout.astro';

const partners = [
  {
    name: '高雄榮民總醫院',
    image: 'https://wwwfs.vghks.gov.tw/001/VghksUploadFiles/273/ckfile/59d29a0b-7921-464f-9f99-7d5239de21db@1024x768.jpg',
    description: '高雄榮民總醫院為國內醫學中心級醫療機構，位於高雄市左營區，以「服務、教學、研究」為三大任務。院徽以藍綠色為主，象徵舒緩與和諧。醫院積極投入高齡照護與長照發展，致力於提供全人照護服務，是本計畫重要的醫療合作夥伴，提供移工朋友專業的醫療資源與支持。',
    website: 'https://www.vghks.gov.tw/',
  },
  {
    name: '高雄榮民總醫院附設住宿長照機構',
    image: '/assets/partners/vghks-ltc-logo.png',
    description: '高雄榮總附設住宿長照機構於 2023 年啟用，位於健康照護大樓，提供 178 床位照護失能、失智及長期臥床患者。機構導入 AI 智慧科技，配備電動智慧輪椅、陪伴機器人及智慧床墊等設備。本計畫與機構合作，協助越南籍照護移工華語學習與文化適應，提升照護服務品質。',
    website: 'https://org.vghks.gov.tw/LC/',
  },
  {
    name: '高雄醫學大學醫學社會學與社會工作學系',
    image: 'https://www.kmu.edu.tw/images/aboutKMU/Organization/KMU_logo/KMU_logo.png',
    description: '高雄醫學大學醫學社會學與社會工作學系成立於 1989 年，是台灣首創整合健康照顧、醫學社會學及社會工作三大領域的科系。系所培養具備醫療社會工作專業的人才，關注弱勢族群權益與醫療平等議題。本計畫與該系合作，共同推動移工照護研究與社會服務實踐。',
    website: 'https://ms.kmu.edu.tw/',
    faculty: [
      {
        name: '張江清',
        title: '講師',
        image: 'https://ms.kmu.edu.tw/images/31-.jpg',
      },
      {
        name: '陳建州',
        title: '副教授',
        image: 'https://ms.kmu.edu.tw/images/Jian-Jhou.png.jpg',
      },
    ],
  },
];
---

<Layout title="合作場域 - WZULTC" description="文藻跨語照護計畫合作夥伴與場域">
  <div class="container mx-auto px-4 py-12 max-w-6xl">
    <!-- Page Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">
        合作場域
      </h1>
      <p class="text-xl text-gray-600">
        攜手共創跨文化照護環境
      </p>
    </div>

    <!-- Introduction -->
    <section class="bg-white rounded-xl shadow-lg p-8 mb-8">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-800 mb-6">
        合作夥伴
      </h2>
      <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed">
        <p>
          本計畫與多個醫療機構、長照單位及教育單位合作，
          共同為越南移工提供華語學習與文化適應支援。
        </p>
        <p>
          透過產學合作模式，我們將理論與實務結合，
          為移工創造更友善的工作環境，同時提升照護服務品質。
        </p>
      </div>
    </section>

    <!-- Partners Detail -->
    <div class="space-y-8 mb-8">
      {partners.map((partner) => (
        <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <div class="md:flex">
            <div class="md:w-1/3 h-48 md:h-auto bg-gray-100">
              <img
                src={partner.image}
                alt={partner.name}
                class="w-full h-full object-contain p-4 bg-white"
              />
            </div>
            <div class="md:w-2/3 p-6 md:p-8">
              <h3 class="text-xl md:text-2xl font-bold text-gray-800 mb-3">
                {partner.name}
              </h3>
              <p class="text-gray-700 leading-relaxed mb-4">
                {partner.description}
              </p>
              <a
                href={partner.website}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center text-teal-600 hover:text-teal-700 font-medium transition-colors"
              >
                <span>前往官方網站</span>
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
              {partner.faculty && (
                <div class="mt-6 pt-4 border-t border-gray-200">
                  <p class="text-sm text-gray-500 mb-3">合作教師</p>
                  <div class="flex flex-wrap gap-4">
                    {partner.faculty.map((person) => (
                      <div class="flex items-center gap-3">
                        <img
                          src={person.image}
                          alt={person.name}
                          class="w-12 h-12 rounded-full object-cover"
                        />
                        <div>
                          <p class="font-semibold text-gray-800">{person.name}</p>
                          <p class="text-sm text-gray-600">{person.title}</p>
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              )}
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- Partner Categories -->
    <section class="mb-8">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-800 mb-6 text-center">
        合作領域
      </h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="bg-gradient-to-br from-blue-50 to-cyan-50 rounded-xl p-8 text-center">
          <div class="w-20 h-20 bg-white rounded-full mx-auto mb-4 flex items-center justify-center shadow-md">
            <svg class="w-10 h-10 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-800">醫療機構</h3>
          <p class="text-gray-600 mt-2 text-sm">提供醫療資源與專業支援</p>
        </div>

        <div class="bg-gradient-to-br from-blue-50 to-cyan-50 rounded-xl p-8 text-center">
          <div class="w-20 h-20 bg-white rounded-full mx-auto mb-4 flex items-center justify-center shadow-md">
            <svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-800">長照機構</h3>
          <p class="text-gray-600 mt-2 text-sm">提供實習與實務訓練場域</p>
        </div>

        <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl p-8 text-center">
          <div class="w-20 h-20 bg-white rounded-full mx-auto mb-4 flex items-center justify-center shadow-md">
            <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-800">教育單位</h3>
          <p class="text-gray-600 mt-2 text-sm">學術研究與教學合作</p>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="bg-gradient-to-r from-blue-500 via-cyan-500 to-teal-500 rounded-xl p-8 text-center text-white">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">
        有興趣成為合作夥伴？
      </h2>
      <p class="text-lg mb-6 opacity-90">
        歡迎與我們聯繫，共同為移工朋友創造更好的學習環境
      </p>
      <a
        href="/contact"
        class="inline-block bg-white text-teal-600 px-8 py-3 rounded-lg font-bold hover:bg-gray-100 transition-colors"
      >
        聯絡我們
      </a>
    </section>
  </div>
</Layout>
